# Requires nginx >=1.4.
# NB: Make sure to start meguca with the -r flag, if reverse-proxying, and set
# the -R flag, if the proxy is on a different machine from the meguca instance.

upstream meguca {
	server 127.0.0.1:8000;
}

# Additional WebSocket proxying support
map $http_upgrade $connection_upgrade {
	default upgrade;
	'' close;
}

server {
	listen 80;

	# Domain the website will be hosted on.
	server_name mydomain.com;

	# For validating letsencrypt SSL certificates
	location /.well-known/ {
		alias /home/meguca/server/www/.well-known/;
	}

	# Redirect to HTTPS
	location / {
		return 301 https://$server_name$request_uri;
	}
}

server {
	# SSL
	listen 443 ssl;
	server_name mydomain.com;

	# Default letsencrypt paths
	ssl_certificate /etc/letsencrypt/live/meguca.org/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/meguca.org/privkey.pem;

	# Gzip compression
	gzip on;
	gzip_proxied any;
	gzip_comp_level 6;
	gzip_types text/plain text/css application/json application/javascript application/x-javascript text/javascript application/octet-stream;

	location / {
		proxy_pass http://meguca/;

		# Stream traffic directly to backend
		proxy_buffering off;

		# Maximum file upload size
		client_max_body_size 100m;

		# Time out very long file uploads
		client_body_timeout 600s;

		# Prevent websocket from closing every 60 seconds
		proxy_read_timeout 36000s;

		# WebSockets support
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection $connection_upgrade;

		# Pass source IP to backend
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

		# CloudFlare support
		#set_real_ip_from 103.21.244.0/22;
